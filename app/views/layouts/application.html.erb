<!DOCTYPE html>
<html>
  <head>
    <title>Deviseauth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless controller_name == "dash" %>
      <nav>
        <h1> Hello </h1>
        <%= link_to "Home", root_path, :class=>"" %>
        <% if user_signed_in? %>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, :class=>"" %>
          <%= link_to "Projects", projects_path %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, :class=>"" %>
        <% end %>
      </nav>
    <% end %>
    <%= yield %>
  </body>
</html>
